#:kivy 2.1.0

<RootWidget>:
    orientation: "vertical"

    GridLayout:
        cols: 2
        #size_hint_max_y: 60

        Label:
            text: "City Name"
            text_size: None, 20
            #size: self.texture_size +
        TextInput:
            id: city_name
            multiline: False
        Label:
            text: "City Size"
            text_size: None, 20
            #size: self.texture_size
        Spinner:
            id: city_size
            text: "Select One"
            values: app.city_sizes
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Race"
            Label:
                text: "% population"
            Button:
                text: "Add race(s)"
                on_press: root.add_race_boxes()
        BoxLayout:
            id: race_layout
            orientation: "vertical"

    SubmitButton:
        id: submit_button
        padding: [2, 4]
        on_press: self.update(output_text, name=city_name.text, size_arg=city_size.text, races=race_layout)

    Label:
        id: output_text
        text:

<SubmitButton>:
    text: "Generate!"
    size_hint_max_y: 20
    size_hint_max_x: 30

<RemoveRaceButton>
    on_release: self.remove_me()